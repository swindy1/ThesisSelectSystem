
@{
    ViewBag.Title = "创建班级";
    Layout = "~/Views/Share/share.cshtml";
}
@section Css{
    <link href="@Url.Content("~/Content/MyWorkPlace/bootstrap.min.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/MyWorkPlace/CreateClasses.css")" rel="stylesheet" type="text/css" />

}

@section JavaScript
{
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MyAdd/CreateClass.js")" type="text/javascript"></script>

}
<h2>创建班级页面</h2>

<div id="div">
    <form action="ShowClassInfo.cshtml" method="POST">
        <label for="ClassName">班级名</label>
        <input id="ClassName" type="text"/><br/><br/>
        
        <label for="Number">班级人数</label>
        <input type="number" id="Number"/><br/><br/>

        <label for="MajorName">专业</label>
        <select id="MajorName">
            @foreach (var name in ViewBag.Data)
            {
                <option>@name</option>
            }
        </select><br/><br/>
        <button type="submit" id="subNewClass" class="btn-primary">完成</button>
    </form>
</div>
